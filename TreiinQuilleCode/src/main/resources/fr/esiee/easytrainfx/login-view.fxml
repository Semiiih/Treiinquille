<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.esiee.easytrainfx.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Login" style="-fx-font-size: 24px;"/>

    <TextField fx:id="identifiantField" promptText="Identifiant"/>
    <PasswordField fx:id="passwordField" promptText="Mot de passe"/>

    <Button text="Se connecter" onAction="#onLoginButtonClick"
            style="-fx-background-color: #6366f1; -fx-text-fill: white;"/>

    <Hyperlink text="Vous n'avez pas encore de compte ? Inscrivez-vous !"
               onAction="#onSignupLinkClick"/>
</VBox>
