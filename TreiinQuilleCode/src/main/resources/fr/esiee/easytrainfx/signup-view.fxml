<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.esiee.easytrainfx.SignupController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Inscription" style="-fx-font-size: 24px;"/>

    <TextField fx:id="identifiantField" promptText="Identifiant"/>
    <PasswordField fx:id="passwordField" promptText="Mot de passe"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe"/>

    <Button text="S'inscrire" onAction="#onSignupButtonClick"
            style="-fx-background-color: #28a745; -fx-text-fill: white;"/>

    <Hyperlink text="Vous avez déjà un compte ? Connectez-vous !"
               onAction="#onLoginLinkClick"/>
</VBox>
